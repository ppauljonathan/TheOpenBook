<%-include('../includes/head',{title:title})%>
<%-include('../includes/header')%>
<%-include('../includes/navbar',{title:title,isLoggedIn:isLoggedIn})%>
<main class="main">
    <div class="wrapper">
        <%if(isLoggedIn){%>
        <form class="vote-form" action="/upvote/<%=post._id%>" method="post">
            <button class="up" type="submit">^</button>
        </form>
        <div class="num"><%=post.upvoters.length-post.downvoters.length%></div>
        <form class="vote-form" action="/downvote/<%=post._id%>" method="post">
            <button class="down" type="submit">v</button>
        </form>
        <%if(userId.toString()===post.creator._id.toString()){%>
        <form action="/delete-post/<%=post._id%>" method="post" class="delete-post-form">
            <button type="submit" class="button">Delete</button>
        </form>
        <%}%>
        <%}%>
        <div class="heading"><%=post.heading%></div>
        <div class="post-authour">by <%=post.creator.username%></div>
        <div class="content"><%=post.content%></div>
    </div>
</main>
<%-include('../includes/tail')%>