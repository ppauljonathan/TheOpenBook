<%-include('../includes/head',{title:title})%>
<%-include('../includes/header')%>
<%-include('../includes/navbar',{title:title,isLoggedIn:isLoggedIn})%>
    <main class="main">
        <%if(posts.length>0){%>
            <%for(let i=0;i<posts.length;i++){%>
                <div class="post-wrapper">
                    <a href="/post/<%=posts[i]._id%>" class="post-heading" ><%=posts[i].heading%></a>
                    <p class="post-authour">
                        <%if(posts[i].creator===null){%>
                            anonymous
                        <%}else{%>
                            <%=posts[i].creator.username%>
                        <%}%>
                    </p>
                </div>
            <%}%>
            <%if(currPage!=firstPage){%>
                <a class="button prev-page" href="/?page=<%=parseInt(currPage)-1%>">prev</a>
            <%}%>
            <p class="page-indicator">Page : <%=currPage%>/<%=lastPage%></p>
            <%if(currPage!=lastPage){%>
                <a class="button next-page" href="/?page=<%=parseInt(currPage)+1%>">next</a>
            <%}%>
        <%}else{%>
            <h1>NO POSTS FOUND</h1>    
        <%}%>   
    </main>
<%-include('../includes/tail')%>