<%-include('../includes/head',{title:title})%>
<%-include('../includes/header')%>
<%-include('../includes/navbar',{title:title,isLoggedIn:isLoggedIn})%>
<main class="main">
    <form class="centered signup"action="/login" method="post">

        <label class="email-label" for="emailOrUsername">E-mail or Username</label>
        <input name="emailOrUsername" class="signup-email"type="text">

        <label class="password-label" for="password">Password</label>
        <input name="password" class="signup-password" type="password">

        <button class="button" type="submit">Login</button>

        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
    </form>
    <p class="already-not-message">Not a member? &nbsp;<a href="/signup" style="width: fit-content; height: fit-content; color: rgb(128, 128, 250);">Signup</a></p>
    <p class="already-not-message">Forgot Password? &nbsp;<a href="/reseter" style="width: fit-content; height: fit-content; color: rgb(128, 128, 250);">Reset</a></p>
    <%if(errors.length!=0){%>
        <p class="errorMsg">ERR:&nbsp;<%=errors[0].msg%></p>
    <%}%>
</main>
<%-include('../includes/tail')%>